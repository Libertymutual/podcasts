.meta-info {
  color: #999;
  margin-bottom: 1rem;
  text-align: center;

  a {
    color: #999;
    display: inline-block;
    font-weight: 400;meta

    &:hover {
      color: $red;
      text-decoration: none;
    }

    &:visited {
      color: #ccc;
    }
  }

  .post-date {
    margin: 0 auto 0 auto;
  }

  .author {
    margin: 0;
    position: relative;
  }

  .tagged {
    display: none;
    font-family: $sans-serif;
    margin-bottom: .5rem;
    text-transform: uppercase;
  }

  .tags {
    display: none;
    list-style-type: none;
    margin-left: 0;
  }
}

.old img {
  float: none !important;
}

.email-container {
  @include fill-parent();
  margin: 0;
  padding: 0 0 4rem;
  text-align: center;

  input {
    width: 100%;
  }

  input[type=email] {
    margin-bottom: .5rem;
  }
}

#pagination {
  display: inline-block;
  @include fill-parent();
  padding: 0 0 3rem;

  a {
    color: #444;
    font-family: $sans-serif;
    font-size: 1em;
    font-weight: 700;
    padding: 6px 9px;
    text-decoration: none;
    text-transform: uppercase;

    &:hover {
      color: #000;
    }
  }
}

#older-link {
  float: left;
  margin: 0 0 0 0;

  a {
    background: url('/images/arrows.png') 0 13px no-repeat;
    margin: 0 0 0 -3px;
    @include position(relative, 0 0 0 -6px);
  }
}

#newer-link {
  float: right;
  text-align: right;

  a {
    background: url('/images/arrows.png') right -15px no-repeat;
    margin: 0 -3px 0 0;
    @include position(relative, 0 -6px 0 0);
  }
}

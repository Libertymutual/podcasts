<article class="podcast-item">
  <div class="logo-wrapper">
    <%= link_to show_episodes_path(show) do %>
      <%= image_tag("#{show.slug}-small.png") %>
    <% end %>
  </div>
  <div class="text-wrapper">
    <h2 class="section-title"><%= link_to show.title, show_episodes_path(show) %></h2>
    <ul class="inline">
      <li><%= link_to 'All Episodes', show_episodes_path(show) %></li>
      <li><%= link_to 'iTunes', show.itunes_url, target: '_blank' %></li>
      <li><%= link_to 'RSS', show_episodes_path(show, format: :xml), target: '_blank' %></li>
      <% if show.stitcher_url.present? %>
        <li><%= link_to 'Stitcher', show.stitcher_url, target: '_blank' %></li>
      <% end %>
    </ul>
    <%== show.description %>
  </div>
</article>

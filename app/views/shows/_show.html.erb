<header>
  <h2 class='logo'>
    <%= link_to show_episodes_path(show) do %>
      <%= image_tag("#{show.slug}-small.png") %>
    <% end %>
  </h2>

  <hgroup>
    <h2>
      <%= link_to show.title, show_episodes_path(show) %>
    </h2>
    <h3>
      <%= link_to 'All Episodes', show_episodes_path(show) %>
      <%= link_to 'iTunes', show.itunes_url, target: '_blank' %>
      <%= link_to 'RSS', show_episodes_path(show, format: :xml), target: '_blank' %>
      <% if show.stitcher_url.present? %>
        <%= link_to 'Stitcher', show.stitcher_url, target: '_blank' %>
      <% end %>
    </h3>
    <p><%== show.description %></p>
  </hgroup>
</header>
